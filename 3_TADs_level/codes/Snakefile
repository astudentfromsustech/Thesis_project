        expand("../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_boundaries.bed", sample=samples),
        expand("../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_boundaries.gff", sample=samples),
        expand("../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_domains.bed", sample=samples),
        expand("../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_score.bedgraph", sample=samples),
        expand("../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_tad_score.bm", sample=samples),
