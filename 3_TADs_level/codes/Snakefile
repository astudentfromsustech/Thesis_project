rule hicFindTADs_for_Normalize0_1:
    input:
        "../data/home_data/combined_cool_10k_targetChroms_normalize0_1_correctionKR_forNormalize0_1/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR.cool"
    output:
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_boundaries.bed",
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_boundaries.gff",
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_domains.bed",
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_score.bedgraph",
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_tad_score.bm",
        "../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}_zscore_matrix.cool"
    params:
        prefix='../results/home_data_results/{sample}_combined_10000_targetChroms_normalize0_1_correctionKR_min30k_max100k_step10k_thresh0.1_delta0.01_dfr/{sample}'
    shell:
        " hicFindTADs -m {input} --outPrefix {params.prefix} --minDepth 30000 --maxDepth 100000 --step 10000 --thresholdComparisons 0.1 --delta 0.01 --correctForMultipleTesting fdr -p 12"